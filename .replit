modules = ["web", "nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["c-ares", "gitFull", "grpc", "openssl", "pkg-config", "playwright-driver", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Replit Backend"

[[workflows.workflow]]
name = "Replit Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd api && npm start"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 44391
externalPort = 3000

[deployment]
deploymentTarget = "gce"
run = ["bash", "-c", "cd api && npm install && npm start"]
